    </div>

    <div class="mt-8">
      <h3 class="text-2xl font-bold mb-3">Music</h3>
      <div class="grid gap-3 sm:grid-cols-2">
        {musicCredits.map((member) => (
          <div class="bg-primary/80 dark:bg-dk-primary/80 rounded-lg border-2 border-secondary dark:border-dk-secondary overflow-hidden max-w-xs w-full mx-0 flex min-h-[160px] transition-transform duration-200 hover:scale-[1.02]">
            <div class="w-2/3 p-3 flex flex-col justify-center text-left">
              <p class="text-xl font-semibold">{member.name}</p>
              {member.role && (
                <p class="text-sm text-secondary dark:text-dk-secondary mt-1">
                  {member.role}
                </p>
              )}
              <div class="flex items-center text-secondary dark:text-dk-secondary mt-1">
                {member.instagram ? (
                  <a
                    href={instagramUrl(member.instagram)}
                    class="hover:text-accent dark:hover:text-dk-accent"
                    target="_blank"
                    rel="noreferrer"
                    aria-label={`${member.name} Instagram`}
                  >
                    <i class="fab fa-instagram"></i>
                  </a>
                ) : (
                  <span class="opacity-40" aria-hidden="true">
                    <i class="fab fa-instagram"></i>
                  </span>
                )}
              </div>
            </div>
            <div class="w-1/3">
              <SmartImage
                src={member.image.src}
                alt={`${member.name} portrait`}
                class="w-full h-full object-cover"
                style={member.imageStyle}
                loading="lazy"
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="my-16 reveal" data-reveal>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-10 sm:gap-12 text-[4.5rem] sm:text-[6rem] lg:text-[8rem] xl:text-[10rem] text-secondary dark:text-dk-secondary place-items-center">
      <div class="flex flex-col items-center gap-4 text-center">
        <a href="#among-monsters" aria-label="Among Monsters section">
          <i class="fab fa-youtube"></i>
        </a>
        <p class="text-sm sm:text-base lg:text-lg text-text dark:text-dk-text">Among Monsters</p>
      </div>
      <div class="flex flex-col items-center gap-4 text-center">
        <a
          href="https://hi.switchy.io/q3TE"
          aria-label="Photography Page"
          target="_blank"
          rel="noreferrer"
        >
          <i class="fab fa-instagram"></i>
        </a>
        <p class="text-sm sm:text-base lg:text-lg text-text dark:text-dk-text">Photography Page</p>
      </div>
      <div class="flex flex-col items-center gap-4 text-center">
        <a href={screenplayUrl} aria-label="Among Monsters screenplay PDF">
          <i class="fas fa-file-pdf"></i>
        </a>
        <p class="text-sm sm:text-base lg:text-lg text-text dark:text-dk-text">Among Monsters Screenplay</p>
      </div>
      <div class="flex flex-col items-center gap-4 text-center">
        <a href="https://hi.switchy.io/q94P" aria-label="Among Monsters IMDb" target="_blank" rel="noreferrer">
          <i class="fab fa-imdb"></i>
        </a>
